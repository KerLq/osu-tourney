            <div class="buttons">
                <%= button_to 'Sign Up!', register_path, method: :get, class: 'button buttons__signup'%>
                <%= button_to 'Login!', login_path, method: :get, class: 'button buttons__login buttons__login--dark'%>    
            </div>
        <% end %>
    </div>
