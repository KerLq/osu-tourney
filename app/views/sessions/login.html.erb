<div class="form">
    <%= form_with(url: login_path, scope: :session, local: true) do |f| %>
        <%= f.label :username, 'Username:', class: 'form__label' %> 
        <%= f.text_field :username, class: 'form__textfield' %> <br>
        <%= f.label :email, 'Email:', class: 'form__label' %>
        <%= f.email_field :email, class: 'form__textfield' %> <br>
        <%= f.label :password, 'Password:', class: 'form__label' %>
        <%= f.password_field :password, class: 'form__textfield'%> <br>
        <%= f.submit 'Login', class: 'button form__submit'%>
    <% end %>
</div>