if ($('.alert').length) {
    $('.alert').remove();
}
<% if flash[:notice].present? %>
    var $div = $("<div>", {"class": "alert"});
    $($div).insertAfter('.beta');
    var $div_message = $("<div>", {"class": "alert__notice"});
    $div_message.text("<%= flash[:notice] %>")
    $($div).append($div_message);
<% end %>
$('.popup').remove();